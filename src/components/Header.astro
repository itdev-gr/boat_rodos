<div>
  <header
    id="site-header"
    class="cs_site_header header_style_2 header_style_2_0 cs_style_1 header_sticky_style1 cs_sticky_header cs_site_header_full_width"
  >
    <div class="cs_main_header">
      <div class="container-fluid">
        <div class="cs_main_header_in">
          <div class="cs_main_header_left">
            <a class="cs_site_branding" href="/">
              <img src="/assets/img/logo/white-logo.svg" alt="Turmet - Explore The World" />
            </a>
          </div>
          <div class="cs_main_header_center">
            <div class="cs_nav cs_primary_font fw-medium">
              <span id="mobile-menu-toggle" class="cs-munu_toggle" aria-label="Toggle menu">
                <span></span>
              </span>
              <ul class="cs_nav_list fw-medium">
                <li><a href="/">Home</a></li>
                <li class="menu-item-has-children">
                  <a href="/services">Services</a>
                  <span class="cs-munu_dropdown_toggle" aria-label="Toggle submenu"></span>
                  <ul>
                    <li class="menu-item-has-children">
                      <a href="/rodos-rent-boat">Rodos Rent Boat</a>
                      <span class="cs-munu_dropdown_toggle" aria-label="Toggle submenu"></span>
                      <ul>
                        <li><a href="/rodos-rent-boat/licenses-free">Licenses Free</a></li>
                        <li><a href="/rodos-rent-boat/boat-with-skipper">Boat with Skipper</a></li>
                      </ul>
                    </li>
                    <li><a href="/rodos-boat-tours">Rodos Boat Tours</a></li>
                    <li><a href="/private-boat-tours">Private Boat Tours</a></li>
                    <li><a href="/rodos-boat-cruises">Rodos Boat Cruises</a></li>
                    <li><a href="/rodos-charter">Rodos Charter</a></li>
                    <li><a href="/rodos-mise">Rodos MISE</a></li>
                    <li><a href="/rodos-tender-boat">Rodos Tender Boat</a></li>
                  </ul>
                </li>
                <li><a href="/about-us">About us</a></li>
                <li><a href="/contact">Contact</a></li>
              </ul>
            </div>
          </div>
          <div class="cs_main_header_right">
            <div class="header-btn d-flex align-items-center">
              <div class="main-button header-btn-1">
                <a id="search-trigger" href="#" class="search-trigger search-icon" aria-label="Open search"><i class="bi bi-search"></i></a>
                <a href="/contact" class="theme-btn">
                  <span>Request A Quote <i class="bi bi-arrow-right"></i></span>
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </header>

  <div id="search-wrap" class="search-wrap">
    <div class="search-inner">
      <i id="search-close" class="bi bi-x-lg search-close" aria-label="Close search"></i>
      <div class="search-cell">
        <form method="get">
          <div class="search-field-holder">
            <input type="search" class="main-search-input" placeholder="Search..." />
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<script>
  (function () {
    const header = document.getElementById('site-header');
    const searchWrap = document.getElementById('search-wrap');
    const searchTrigger = document.getElementById('search-trigger');
    const searchClose = document.getElementById('search-close');
    const mobileToggle = document.getElementById('mobile-menu-toggle');

    if (!header || !searchWrap) return;
    const headerEl = header;

    let prevScrollPos = 0;

    function onScroll() {
      const currentScrollPos = window.scrollY;
      headerEl.classList.remove('cs-gescout_sticky', 'cs-gescout_show');
      if (currentScrollPos > prevScrollPos) {
        headerEl.classList.add('cs-gescout_sticky');
      } else if (currentScrollPos !== 0) {
        headerEl.classList.add('cs-gescout_show', 'cs-gescout_sticky');
      }
      prevScrollPos = currentScrollPos;
    }

    window.addEventListener('scroll', onScroll, { passive: true });

    if (searchTrigger) {
      searchTrigger.addEventListener('click', (e) => {
        e.preventDefault();
        searchWrap.classList.add('active');
      });
    }
    if (searchClose) {
      searchClose.addEventListener('click', () => searchWrap.classList.remove('active'));
    }

    if (mobileToggle) {
      mobileToggle.addEventListener('click', () => headerEl.classList.toggle('cs_mobile_toggle_active'));
    }

    document.querySelectorAll('.cs-munu_dropdown_toggle').forEach((btn) => {
      const el = btn instanceof HTMLElement ? btn : null;
      if (el) {
        el.addEventListener('click', () => {
          el.classList.toggle('active');
          const parent = el.closest('.menu-item-has-children');
          if (parent) parent.classList.toggle('dropdown-open');
        });
      }
    });
  })();
</script>
