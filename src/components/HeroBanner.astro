<script>
  (function () {
    function loadBackgroundImages() {
      const elements = document.querySelectorAll('[data-background]');
      elements.forEach((el) => {
        const url = el.getAttribute('data-background');
        if (url && el instanceof HTMLElement) el.style.backgroundImage = `url('${url}')`;
      });
    }
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', loadBackgroundImages);
    } else {
      loadBackgroundImages();
    }

    const tabs = document.querySelectorAll('.hero-tabs .nav-item');
    const panes = document.querySelectorAll('.tab-pane[data-hero-pane]');
    tabs.forEach((tab) => {
      tab.addEventListener('click', (e) => {
        e.preventDefault();
        const key = tab.getAttribute('data-hero-tab');
        tabs.forEach((t) => t.classList.remove('active'));
        panes.forEach((p) => p.classList.remove('active'));
        tab.classList.add('active');
        const pane = document.querySelector(`.tab-pane[data-hero-pane="${key}"]`);
        if (pane) pane.classList.add('active');
      });
    });
  })();
</script>
